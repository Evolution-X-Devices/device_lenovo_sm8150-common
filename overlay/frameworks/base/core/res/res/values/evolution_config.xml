<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Whether to show settings for hiding notch fill -->
    <bool name="config_showHideNotchSettings">true</bool>

    <!-- Smart charging -->
    <bool name="config_smartChargingAvailable">true</bool>
    <string name="config_SmartChargingSysfsNode" translatable="false">/sys/class/power_supply/battery/input_suspend</string>
    <string name="config_SmartChargingSuspendValue" translatable="false">1</string>
    <string name="config_SmartChargingResumeValue" translatable="false">0</string>

    <!-- Display mode remapping table.
         If the mode names returned by the backend do not match
         the predefined and translated strings in the Settings
         app, they can be remapped here. The format is
         "oldname:newname", one per entry. -->
    <string-array name="config_displayModeMappings" translatable="false">
        <item>sRGB-7300:Standard</item>
        <item>P3-6200:Warm</item> 
        <item>P3-9000:Cold</item>
    </string-array>

    <!-- Should we filter any display modes which are unmapped? -->
    <bool name="config_filterDisplayModes">true</bool>

    <!-- Whether the device supports Smart Pixels -->
    <bool name="config_supportSmartPixels">true</bool>

    <!-- Defines the sysfs attribute path used by the device
         to enable/disable DC dimming. -->
    <string name="config_deviceDcDimmingSysfsNode">/sys/devices/platform/soc/soc:qcom,dsi-display-primary/dimlayer_bl</string>
</resources>
